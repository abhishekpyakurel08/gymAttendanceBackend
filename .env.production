# Production Environment Configuration
# Copy this to .env and configure for production

# Server Configuration
PORT=5000
NODE_ENV=production

# Database Configuration - USE MONGODB ATLAS FOR PRODUCTION
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/shankmul_gym_attendance?retryWrites=true&w=majority

# JWT Configuration - CHANGE SECRET IN PRODUCTION!
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_MIN_32_CHARS
JWT_EXPIRE=365d

# CORS Configuration - Add your frontend URLs
ALLOWED_ORIGINS=https://your-production-app-url.com,https://your-app-subdomain.com

# App Configuration
DEFAULT_TIMEZONE=Asia/Kathmandu
OFFICE_START_TIME=09:00
OFFICE_END_TIME=18:00
LATE_THRESHOLD_MINUTES=15

